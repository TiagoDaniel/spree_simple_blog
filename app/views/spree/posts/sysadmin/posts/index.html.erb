<div id="posts-container">
  <%= link_to 'New Post', new_sysadmin_post_path, {:class => "button icon-plus"}%>
  
  <h1> Listing Posts </h1>

  <table class="index">
    <thead>
      <tr data-hook="posts_header">
        <th>Title</th>
        <th>Live</th>
        <th>Posted at</th>
        <th>Created at</th>
        <th>View</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
  	  <%@posts.each do |p|%>
        <tr data-hook="reports_row">
          <td><%=link_to p.title, sysadmin_post_path(p)%></td>
      	  
      	  <%if p.live%>
      	  	<td>Online</td>
      	  <%else%>
      	  	<td>Draft</td>
      	  <%end%>
      	  
      	  <%if p.posted_at%> 
      	  	<td><%=localize p.posted_at, format: :long%></td>
      	  <%else%>
      	  	<td></td>
      	  <%end%>
      	  
      	  <td><%=localize p.created_at, format: :long%></td>
      	  <td><%=link_to 'View', sysadmin_post_path(p)%></td>
      	  <td><%=link_to 'Edit', edit_sysadmin_post_path(p)%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%=paginate @posts %>
</div>